<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/RelativeLayoutFragmentDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cardView"
        android:layout_marginBottom="6dp">

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="10dp"
        app:contentPaddingTop="10dp"
        app:contentPaddingBottom="10dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonMusicAlbum"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:src="@drawable/ic_play_button" />

            <ImageView
                android:id="@+id/buttonMusicFolder"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:src="@drawable/ic_video_folder" />

            <ImageView
                android:id="@+id/buttonDownloadMusic"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:src="@drawable/ic_download" />


            <ImageView
                android:id="@+id/buttonUserProfile"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:src="@drawable/ic_user" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>